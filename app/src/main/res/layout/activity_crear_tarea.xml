<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio">

    <Button
        android:id="@+id/guardarTareaButton2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/boton_redondeado"
        android:text="11:10" />

    <ImageView
        android:id="@+id/user_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="50dp"
        android:paddingRight="35dp"
        android:src="@drawable/icon_user1" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@+id/user_imageview"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="65dp"
        android:text="User"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="543dp"
        android:layout_below="@+id/user_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">


        <EditText
            android:id="@+id/txt_nombre_tarea"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/logo_imageview"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="10dp"
            android:gravity="center"

            android:hint="Nombre Tarea"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/txt_des_tarea"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/logo_imageview"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="10dp"
            android:gravity="center"
            android:hint="Descripcion"
            android:inputType="text"
            android:maxLines="1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txt_fecha_tarea"
                android:layout_width="130dp"
                android:layout_height="46dp"
                android:layout_below="@+id/logo_imageview"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edittext_background"
                android:elevation="10dp"
                android:gravity="center"
                android:hint="Fecha"
                android:inputType="text"
                android:maxLines="1" />


            <EditText
                android:id="@+id/txt_hora_tarea"
                android:layout_width="130dp"
                android:layout_height="46dp"
                android:layout_below="@+id/logo_imageview"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/rounded_edittext_background"
                android:elevation="10dp"
                android:gravity="center"
                android:hint="Hora"
                android:inputType="text"
                android:maxLines="1" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_inicio"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Valor Tarea"
            android:textSize="18sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_valor1"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"

                android:backgroundTint="#FFF8C3"
                android:text="1"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_valor2"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"

                android:backgroundTint="#FFF8C3"
                android:text="2"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_valor3"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:backgroundTint="#FFF8C3"
                android:text="3"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_valor4"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="10dp"
                android:backgroundTint="#FFF8C3"
                android:text="4"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_valor5"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="10dp"
                android:backgroundTint="#FFF8C3"
                android:text="5"
                android:textColor="#000000" />

            <Button
                android:id="@+id/btn_valor6"
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:backgroundTint="#FFF8C3"
                android:text="6"
                android:textColor="#000000" />

        </LinearLayout>

        <Button
            android:id="@+id/guardarTareaButton"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton_redondeado"
            android:text="Hecho"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ly1"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="CREAR TAREA"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp">

        <ImageButton
            android:id="@+id/btn_atras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_atras2"
            android:layout_marginLeft="5dp"
            android:background="@null"/>

    </LinearLayout>



</RelativeLayout>