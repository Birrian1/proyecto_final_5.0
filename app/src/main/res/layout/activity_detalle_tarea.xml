<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio">

    <Button
        android:id="@+id/guardarTareaButton2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/boton_redondeado"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="11:10" />

    <ImageView
        android:id="@+id/user_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="35dp"
        android:src="@drawable/icon_user1" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@+id/user_imageview"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="65dp"
        android:text="User"
        android:textStyle="bold" />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/icon_atras" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="TAREA"
            android:layout_below="@id/ly1"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:typeface="normal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp">

        <ImageButton
            android:id="@+id/btn_atras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_atras2"
            android:layout_marginLeft="5dp"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_tareas"
        android:background="@drawable/fondo_redondeado2"
        android:layout_width="387dp"
        android:layout_height="450dp"
        android:layout_below="@+id/user_name"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="60dp"

        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txt_integrante5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            android:text="4:00 PM"
            android:gravity="right"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_integrante3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="LAVAR LOS TRASTES"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_integrante12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="DescripciÃ³n"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/fondo_redondeado"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_integrante4"
                android:layout_width="300dp"
                android:layout_height="101dp"
                android:layout_below="@+id/user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="0dp"

                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat."
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_integrante2"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="right|left"
            android:text="Tarea: 3"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_integrante6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="right|left"
            android:text="Puntos"
            android:textSize="14sp"
            android:textStyle="bold" />



        <TextView
            android:id="@+id/txt_integrante7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="right|left"
            android:text="Duracion de tarea: 10Mins"
            android:textSize="14sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            android:gravity="center">


            <TextView
                android:id="@+id/txt_integrante9"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_below="@+id/user_name"
                android:layout_alignParentEnd="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="90dp"
                android:gravity="bottom|right"
                android:text="Faltan 5 horas"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_integrante10"
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:layout_below="@+id/user_name"
                android:layout_alignParentEnd="false"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="bottom|right"
                android:text="Alarma On"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_ruleta"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/ly_tareas"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button"
        android:text="Ruleta"
        android:textSize="12sp" />


</RelativeLayout>

