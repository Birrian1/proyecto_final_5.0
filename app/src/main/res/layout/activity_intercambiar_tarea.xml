<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_inicio">

    <Button
        android:id="@+id/guardarTareaButton2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/boton_redondeado"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="32dp"
        android:text="11:10" />

    <ImageView
        android:id="@+id/user_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:paddingRight="35dp"
        android:src="@drawable/icon_user1" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@+id/user_imageview"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="65dp"
        android:text="User"
        android:textStyle="bold" />


    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="552dp"
        android:layout_below="@+id/user_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:padding="50dp">


        <TextView
            android:id="@+id/txt_integrante"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Integrante"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTaskIntegrante"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/logo_imageview"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"

            android:gravity="center"
            android:hint=""
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/txt_intercambiar"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Intercambiar"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTaskIntercambiar"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/logo_imageview"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="10dp"
            android:gravity="center"
            android:hint=""
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/txt_por"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Por"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTaskPor"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_below="@+id/logo_imageview"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/rounded_edittext_background"
            android:elevation="10dp"
            android:gravity="center"
            android:hint=""
            android:inputType="text"
            android:maxLines="1" />


        <Button
            android:id="@+id/crear_intercambio"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ly_contenido"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:background="@drawable/boton_redondeado"
            android:text="Hecho" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:padding="10dp"
            android:src="@drawable/icon_atras" />

        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="NOTAS"
            android:layout_below="@id/ly1"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:typeface="normal"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ly1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="113dp">

        <ImageButton
            android:id="@+id/btn_atras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_atras2"
            android:layout_marginLeft="5dp"
            android:background="@null"/>

    </LinearLayout>



</RelativeLayout>